<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_forecast_weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qing"
            android:layout_marginTop="@dimen/fragment_forecast_margin_top"/>
        <TextView
            android:id="@+id/tv_forecast_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="-11℃"
            android:layout_marginTop="@dimen/fragment_forecast_margin_top"/>
        <TextView
            android:id="@+id/tv_forecast_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="北京"
            android:layout_marginTop="@dimen/fragment_forecast_margin_top"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_forecast_china_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="农历：XXXXXXXXXXX"
        android:layout_marginTop="@dimen/fragment_forecast_margin_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/fragment_forecast_margin_top">
        <EditText
            android:id="@+id/et_forecast_search_city_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入查询城市"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_forecast_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询"/>
    </LinearLayout>
</LinearLayout>
